@code {
	double InputNum1 = 0;
	double InputNum2 = 0;
	double SumValue = 0;
	private bool selectmemu1 = false;
	private bool selectmemu2 = false;
	private bool selectmemu3 = false;
	private bool selectmemu4 = false;
	private List<int> List = new();

	
	private void OnCheck1()
	{
		selectmemu1 = !selectmemu1;
		selectmemu2 = false;
		selectmemu3 = false;
		selectmemu4 = false;
	}
	private void OnCheck2()
	{
		selectmemu1 = false;
		selectmemu2 = !selectmemu1;
		selectmemu3 = false;
		selectmemu4 = false;
	}
	private void OnCheck3()
	{
		selectmemu1 = false;
		selectmemu2 = false;
		selectmemu3 = !selectmemu1;
		selectmemu4 = false;
	}
	private void OnCheck4()
	{
		selectmemu1 = false;
		selectmemu2 = false;
		selectmemu3 = false;
		selectmemu4 = !selectmemu1;
	}
	private void OnCalculate()
	{
		@if (selectmemu1 == true)
		{
			SumValue = InputNum1 + InputNum2;
		}
		@if (selectmemu2 == true)
		{
			SumValue = InputNum1 - InputNum2;
		}
		@if (selectmemu3 == true)
		{
			SumValue = InputNum1 * InputNum2;
		}
		@if (selectmemu4 == true)
		{
			SumValue = InputNum1 / InputNum2;
		}
	}

}